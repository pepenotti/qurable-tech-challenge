# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/coupon_db

# App Settings
APP_NAME=Coupon Book Service
DEBUG=True
API_VERSION=v1
ENVIRONMENT=development

# JWT Authentication & Security
# Generate a secure key with: openssl rand -hex 32
SECRET_KEY=change-this-to-a-secure-random-key-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Concurrency Settings
LOCK_TIMEOUT_SECONDS=300
MAX_RETRY_ATTEMPTS=3

# Code Generation
DEFAULT_CODE_CHARSET=ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789
MAX_COLLISION_RETRIES=3

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
