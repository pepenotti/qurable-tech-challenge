<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon Service - Admin Panel</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: #f5f5f7;
            color: #1d1d1f;
            line-height: 1.6;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        header {
            background: white;
            padding: 30px;
            border-radius: 12px;
            margin-bottom: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        h1 {
            font-size: 32px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .status {
            display: inline-block;
            padding: 6px 12px;
            background: #34c759;
            color: white;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .card {
            background: white;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .card h2 {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #1d1d1f;
        }

        .form-group {
            margin-bottom: 16px;
        }

        label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 6px;
            color: #424245;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #d2d2d7;
            border-radius: 8px;
            font-size: 14px;
            font-family: inherit;
            transition: border-color 0.2s;
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: #007aff;
        }

        textarea {
            resize: vertical;
            min-height: 80px;
        }

        button {
            width: 100%;
            padding: 12px;
            background: #007aff;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s;
        }

        button:hover {
            background: #0051d5;
        }

        button:active {
            transform: translateY(1px);
        }

        .response {
            margin-top: 16px;
            padding: 12px;
            background: #f5f5f7;
            border-radius: 8px;
            font-size: 13px;
            font-family: 'Monaco', 'Courier New', monospace;
            max-height: 300px;
            overflow-y: auto;
            white-space: pre-wrap;
            word-break: break-all;
        }

        .response.success {
            background: #d1f4e0;
            color: #0d5028;
        }

        .response.error {
            background: #fdd;
            color: #c41e3a;
        }

        .tabs {
            display: flex;
            gap: 4px;
            margin-bottom: 20px;
            background: white;
            padding: 4px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .tab {
            flex: 1;
            padding: 12px;
            text-align: center;
            background: transparent;
            color: #424245;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.2s;
        }

        .tab.active {
            background: #007aff;
            color: white;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .info-text {
            font-size: 13px;
            color: #86868b;
            margin-top: 8px;
        }

        .entity-list {
            margin-top: 20px;
            max-height: 400px;
            overflow-y: auto;
        }

        .entity-item {
            padding: 12px;
            background: white;
            border-radius: 8px;
            margin-bottom: 8px;
            border: 1px solid #e5e5e7;
            cursor: pointer;
            transition: all 0.2s;
        }

        .entity-item:hover {
            border-color: #007aff;
            box-shadow: 0 2px 4px rgba(0,122,255,0.1);
        }

        .entity-item strong {
            color: #1d1d1f;
            font-size: 14px;
        }

        .entity-item small {
            color: #86868b;
            font-size: 12px;
            display: block;
            margin-top: 4px;
        }

        .badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            margin-left: 8px;
        }

        .badge.unassigned { background: #e5e5e7; color: #424245; }
        .badge.assigned { background: #d1f4e0; color: #0d5028; }
        .badge.locked { background: #fff4ce; color: #8c6d1f; }
        .badge.redeemed { background: #007aff; color: white; }
        .badge.expired { background: #ffcccc; color: #c41e3a; }

        .copy-btn {
            padding: 4px 8px;
            background: #f5f5f7;
            border: 1px solid #d2d2d7;
            border-radius: 4px;
            font-size: 11px;
            cursor: pointer;
            margin-left: 8px;
            transition: all 0.2s;
        }

        .copy-btn:hover {
            background: #007aff;
            color: white;
            border-color: #007aff;
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #86868b;
        }

        .refresh-btn {
            padding: 8px 16px;
            background: #f5f5f7;
            border: 1px solid #d2d2d7;
            border-radius: 6px;
            font-size: 13px;
            cursor: pointer;
            transition: all 0.2s;
            margin-bottom: 12px;
        }

        .refresh-btn:hover {
            background: #e5e5e7;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Coupon Service Admin</h1>
            <p style="color: #86868b; margin-bottom: 12px;">Manage books, coupons, and redemptions</p>
            <span class="status" id="status">Checking...</span>
        </header>

        <div class="tabs">
            <button class="tab active" onclick="switchTab('users')">üë§ Users</button>
            <button class="tab" onclick="switchTab('books')">üìö Books</button>
            <button class="tab" onclick="switchTab('coupons')">üéüÔ∏è Coupons</button>
            <button class="tab" onclick="switchTab('redemptions')">‚úÖ Redemptions</button>
        </div>

        <!-- Users Tab -->
        <div id="users" class="tab-content active">
            <div class="grid">
                <div class="card">
                    <h2>Create User</h2>
                    <form onsubmit="createUser(event)">
                        <div class="form-group">
                            <label>User ID</label>
                            <input type="text" id="user_id" required placeholder="user_123">
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" id="user_name" required placeholder="John Doe">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" id="user_email" required placeholder="john@example.com">
                        </div>
                        <button type="submit">Create User</button>
                    </form>
                    <div id="createUserResponse" class="response" style="display:none;"></div>
                </div>

                <div class="card">
                    <h2>Get User</h2>
                    <form onsubmit="getUser(event)">
                        <div class="form-group">
                            <label>User ID</label>
                            <input type="text" id="get_user_id" required placeholder="user_123">
                        </div>
                        <button type="submit">Get User</button>
                    </form>
                    <div id="getUserResponse" class="response" style="display:none;"></div>
                </div>
            </div>
        </div>

        <!-- Books Tab -->
        <div id="books" class="tab-content">
            <div class="grid">
                <div class="card">
                    <h2>Create Book</h2>
                    <form onsubmit="createBook(event)">
                        <div class="form-group">
                            <label>Book ID</label>
                            <input type="text" id="book_id" required placeholder="book_123">
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" id="book_name" required placeholder="Summer Sale 2026">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea id="book_description" placeholder="Special discount coupons"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Owner ID</label>
                            <input type="text" id="book_owner_id" required placeholder="user_123">
                        </div>
                        <button type="submit">Create Book</button>
                    </form>
                    <div id="createBookResponse" class="response" style="display:none;"></div>
                </div>

                <div class="card">
                    <h2>Get Book</h2>
                    <form onsubmit="getBook(event)">
                        <div class="form-group">
                            <label>Book ID</label>
                            <input type="text" id="get_book_id" required placeholder="book_123">
                        </div>
                        <button type="submit">Get Book</button>
                    </form>
                    <div id="getBookResponse" class="response" style="display:none;"></div>
                </div>
            </div>
        </div>

        <!-- Coupons Tab -->
        <div id="coupons" class="tab-content">
            <div class="grid">
                <div class="card">
                    <h2>Generate Coupons</h2>
                    <form onsubmit="generateCoupons(event)">
                        <div class="form-group">
                            <label>Book ID</label>
                            <input type="text" id="gen_book_id" required placeholder="book_123">
                        </div>
                        <div class="form-group">
                            <label>Number of Codes</label>
                            <input type="number" id="gen_count" required value="5" min="1" max="100">
                        </div>
                        <div class="form-group">
                            <label>Code Length (optional)</label>
                            <input type="number" id="gen_length" placeholder="8" min="4" max="20">
                        </div>
                        <button type="submit">Generate Coupons</button>
                    </form>
                    <div id="generateCouponsResponse" class="response" style="display:none;"></div>
                </div>

                <div class="card">
                    <h2>Assign Coupon</h2>
                    <form onsubmit="assignCoupon(event)">
                        <div class="form-group">
                            <label>Coupon Code</label>
                            <input type="text" id="assign_code" required placeholder="ABC123XY">
                        </div>
                        <div class="form-group">
                            <label>User ID</label>
                            <input type="text" id="assign_user_id" required placeholder="user_123">
                        </div>
                        <button type="submit">Assign Coupon</button>
                    </form>
                    <div id="assignCouponResponse" class="response" style="display:none;"></div>
                </div>

                <div class="card">
                    <h2>Get Book Coupons</h2>
                    <form onsubmit="getBookCoupons(event)">
                        <div class="form-group">
                            <label>Book ID</label>
                            <input type="text" id="coupons_book_id" required placeholder="book_123">
                        </div>
                        <button type="submit">Get Coupons</button>
                    </form>
                    <div id="getBookCouponsResponse" class="response" style="display:none;"></div>
                </div>
            </div>
        </div>

        <!-- Redemptions Tab -->
        <div id="redemptions" class="tab-content">
            <div class="grid">
                <div class="card">
                    <h2>Lock Coupon</h2>
                    <form onsubmit="lockCoupon(event)">
                        <div class="form-group">
                            <label>Coupon Code</label>
                            <input type="text" id="lock_code" required placeholder="ABC123XY">
                        </div>
                        <div class="form-group">
                            <label>User ID</label>
                            <input type="text" id="lock_user_id" required placeholder="user_123">
                        </div>
                        <button type="submit">Lock Coupon</button>
                    </form>
                    <div id="lockCouponResponse" class="response" style="display:none;"></div>
                </div>

                <div class="card">
                    <h2>Redeem Coupon</h2>
                    <form onsubmit="redeemCoupon(event)">
                        <div class="form-group">
                            <label>Coupon Code</label>
                            <input type="text" id="redeem_code" required placeholder="ABC123XY">
                        </div>
                        <div class="form-group">
                            <label>User ID</label>
                            <input type="text" id="redeem_user_id" required placeholder="user_123">
                        </div>
                        <button type="submit">Redeem Coupon</button>
                    </form>
                    <div id="redeemCouponResponse" class="response" style="display:none;"></div>
                </div>

                <div class="card">
                    <h2>Get Redemption History</h2>
                    <form onsubmit="getRedemptionHistory(event)">
                        <div class="form-group">
                            <label>Book ID</label>
                            <input type="text" id="history_book_id" required placeholder="book_123">
                        </div>
                        <button type="submit">Get History</button>
                    </form>
                    <div id="getRedemptionHistoryResponse" class="response" style="display:none;"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const API_BASE = 'http://localhost:8000';

        // Check API health on load
        async function checkHealth() {
            try {
                const response = await fetch(`${API_BASE}/health`);
                const data = await response.json();
                document.getElementById('status').textContent = `‚úì ${data.status} (v${data.version})`;
                document.getElementById('status').style.background = '#34c759';
            } catch (error) {
                document.getElementById('status').textContent = '‚úó Offline';
                document.getElementById('status').style.background = '#ff3b30';
            }
        }

        checkHealth();

        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tabName).classList.add('active');
        }

        function showResponse(elementId, data, isError = false) {
            const element = document.getElementById(elementId);
            element.style.display = 'block';
            element.textContent = JSON.stringify(data, null, 2);
            element.className = isError ? 'response error' : 'response success';
        }

        async function createUser(event) {
            event.preventDefault();
            const data = {
                user_id: document.getElementById('user_id').value,
                name: document.getElementById('user_name').value,
                email: document.getElementById('user_email').value
            };

            try {
                const response = await fetch(`${API_BASE}/users`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                showResponse('createUserResponse', result, !response.ok);
            } catch (error) {
                showResponse('createUserResponse', { error: error.message }, true);
            }
        }

        async function getUser(event) {
            event.preventDefault();
            const userId = document.getElementById('get_user_id').value;

            try {
                const response = await fetch(`${API_BASE}/users/${userId}`);
                const result = await response.json();
                showResponse('getUserResponse', result, !response.ok);
            } catch (error) {
                showResponse('getUserResponse', { error: error.message }, true);
            }
        }

        async function createBook(event) {
            event.preventDefault();
            const data = {
                book_id: document.getElementById('book_id').value,
                name: document.getElementById('book_name').value,
                description: document.getElementById('book_description').value || undefined,
                owner_id: document.getElementById('book_owner_id').value
            };

            try {
                const response = await fetch(`${API_BASE}/books`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                showResponse('createBookResponse', result, !response.ok);
            } catch (error) {
                showResponse('createBookResponse', { error: error.message }, true);
            }
        }

        async function getBook(event) {
            event.preventDefault();
            const bookId = document.getElementById('get_book_id').value;

            try {
                const response = await fetch(`${API_BASE}/books/${bookId}`);
                const result = await response.json();
                showResponse('getBookResponse', result, !response.ok);
            } catch (error) {
                showResponse('getBookResponse', { error: error.message }, true);
            }
        }

        async function generateCoupons(event) {
            event.preventDefault();
            const bookId = document.getElementById('gen_book_id').value;
            const count = parseInt(document.getElementById('gen_count').value);
            const length = document.getElementById('gen_length').value;

            const data = { count };
            if (length) data.length = parseInt(length);

            try {
                const response = await fetch(`${API_BASE}/books/${bookId}/codes/generate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                showResponse('generateCouponsResponse', result, !response.ok);
            } catch (error) {
                showResponse('generateCouponsResponse', { error: error.message }, true);
            }
        }

        async function assignCoupon(event) {
            event.preventDefault();
            const code = document.getElementById('assign_code').value;
            const userId = document.getElementById('assign_user_id').value;

            try {
                const response = await fetch(`${API_BASE}/coupons/assign/${code}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ user_id: userId })
                });
                const result = await response.json();
                showResponse('assignCouponResponse', result, !response.ok);
            } catch (error) {
                showResponse('assignCouponResponse', { error: error.message }, true);
            }
        }

        async function getBookCoupons(event) {
            event.preventDefault();
            const bookId = document.getElementById('coupons_book_id').value;

            try {
                const response = await fetch(`${API_BASE}/books/${bookId}/coupons`);
                const result = await response.json();
                showResponse('getBookCouponsResponse', result, !response.ok);
            } catch (error) {
                showResponse('getBookCouponsResponse', { error: error.message }, true);
            }
        }

        async function lockCoupon(event) {
            event.preventDefault();
            const code = document.getElementById('lock_code').value;
            const userId = document.getElementById('lock_user_id').value;

            try {
                const response = await fetch(`${API_BASE}/coupons/lock/${code}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ user_id: userId })
                });
                const result = await response.json();
                showResponse('lockCouponResponse', result, !response.ok);
            } catch (error) {
                showResponse('lockCouponResponse', { error: error.message }, true);
            }
        }

        async function redeemCoupon(event) {
            event.preventDefault();
            const code = document.getElementById('redeem_code').value;
            const userId = document.getElementById('redeem_user_id').value;

            try {
                const response = await fetch(`${API_BASE}/coupons/redeem/${code}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ user_id: userId })
                });
                const result = await response.json();
                showResponse('redeemCouponResponse', result, !response.ok);
            } catch (error) {
                showResponse('redeemCouponResponse', { error: error.message }, true);
            }
        }

        async function getRedemptionHistory(event) {
            event.preventDefault();
            const bookId = document.getElementById('history_book_id').value;

            try {
                const response = await fetch(`${API_BASE}/books/${bookId}/redemption-history`);
                const result = await response.json();
                showResponse('getRedemptionHistoryResponse', result, !response.ok);
            } catch (error) {
                showResponse('getRedemptionHistoryResponse', { error: error.message }, true);
            }
        }
    </script>
</body>
</html>
